<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/setup_wizard_bg_img"
    android:gravity="center_horizontal"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="center"
            android:src="@drawable/setup_wizard_1" />

    </LinearLayout>

    <TextView
        android:id="@+id/active"
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:layout_marginBottom="8dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/active_inputmethod_bg"
        android:gravity="center"
        android:text="1. 激活当前输入法"
        android:textColor="#01ACFF"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/switch_input"
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="15dip"
        android:background="@drawable/switch_inputmethod_background"
        android:gravity="center"
        android:text="2.切换当前输入法"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dip"
        android:layout_marginBottom="5dip"
        android:textColor="@color/white"
        android:layout_marginRight="15dip"
        android:layout_gravity="right"
        android:text="安装版权说明"
        />

</LinearLayout>
